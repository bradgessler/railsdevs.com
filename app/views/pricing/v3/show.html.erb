    <h2 id="faq" class="text-3xl font-extrabold text-gray-900"><%= t("pricing.v2.faq.title") %></h2>
    <div class="mt-8">
      <dl class="divide-y divide-gray-200">
        <div class="pt-6 pb-8 md:grid md:grid-cols-12 md:gap-8">
          <dt class="text-base font-medium text-gray-900 md:col-span-5"><%= t("pricing.v2.faq.developers.q") %></dt>
          <dd class="mt-2 md:mt-0 md:col-span-7">
            <p class="text-base text-gray-500"><%= t("pricing.v2.faq.developers.a") %></p>
          </dd>
          <dt class="text-base font-medium text-gray-900 md:col-span-5 mt-8 md:mt-0"><%= t("pricing.v2.faq.subscription.q") %></dt>
          <dd class="mt-2 md:mt-0 md:col-span-7">
            <p class="text-base text-gray-500"><%= t("pricing.v2.faq.subscription.a") %></p>
          </dd>
          <dt class="text-base font-medium text-gray-900 md:col-span-5 mt-8 md:mt-0"><%= t("pricing.v2.faq.features.q") %></dt>
          <dd class="mt-2 md:mt-0 md:col-span-7">
            <p class="text-base text-gray-500"><%= t("pricing.v2.faq.features.a") %></p>
          </dd>
          <dt id="full-time-fee" class="text-base font-medium text-gray-900 md:col-span-5 mt-8 md:mt-0"><%= t("pricing.v2.faq.fee.q") %></dt>
          <dd class="mt-2 md:mt-0 md:col-span-7">
            <p class="text-base text-gray-500"><%= t("pricing.v2.faq.fee.a_html") %></p>
          </dd>
          <dt class="text-base font-medium text-gray-900 md:col-span-5 mt-8 md:mt-0"><%= t("pricing.v2.faq.annual.q") %></dt>
          <dd class="mt-2 md:mt-0 md:col-span-7">
            <p class="text-base text-gray-500"><%= t("pricing.v2.faq.annual.a_html") %></p>
