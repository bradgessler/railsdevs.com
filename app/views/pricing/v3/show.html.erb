          <dd class="mt-2 md:mt-0 md:col-span-7">
            <p class="text-base text-gray-500"><%= t("pricing.v2.faq.cancellation.a_html") %></p>
          </dd>
          <dt class="text-base font-medium text-gray-900 md:col-span-5 mt-8 md:mt-0"><%= t("pricing.v2.faq.support.q") %></dt>
          <dd class="mt-2 md:mt-0 md:col-span-7">
            <p class="text-base text-gray-500"><%= t("pricing.v2.faq.support.a_html") %></p>
          </dd>
        </div>
      </dl>
